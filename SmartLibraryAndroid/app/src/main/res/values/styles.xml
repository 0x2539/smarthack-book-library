<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <!--<item name="android:editTextColor">@color/red_dark</item>-->
        <!--<item name="editTextColor">@color/red_dark</item>-->

        <item name="android:editTextStyle">@style/CustomEditText</item>
        <!--pre lollipop -->
        <item name="editTextStyle">@style/CustomEditText</item>

        <item name="android:buttonStyle" tools:targetApi="lollipop">@style/ButtonText</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>
        <!--pre lollipop -->
        <item name="buttonStyle">@style/ButtonText</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>


        <!-- navigation drawer icon color (hamburger) -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="GoogleButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="UnavailableButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_half</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/grey_half</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="ButtonText" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorText</item>
        <!--<item name="colorButtonNormal">@color/colorPrimary</item>-->
        <!--<item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>-->
    </style>
    
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorText</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="colorControlNormal">@color/colorText</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->

        <!-- change toolbar text color -->
        <item name="android:textColorPrimary">@color/colorText</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="android:listDivider">@color/colorDivider</item>
        <item name="android:textColorSecondary">@color/grey_half</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fitsSystemWindows">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--<item name="android:buttonStyle" tools:targetApi="lollipop">@style/ButtonText</item>-->
        <!--<item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorPrimary</item>-->
        <!--pre lollipop -->
        <!--<item name="buttonStyle">@style/ButtonText</item>-->
        <!--<item name="colorButtonNormal">@color/colorPrimary</item>-->
    </style>
</resources>
